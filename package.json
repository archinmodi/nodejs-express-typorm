    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.6",
    "@types/ejs": "^2.6.3",
    "@types/helmet": "0.0.44",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.12",
    "@types/pg": "^7.4.14",
    "@types/shelljs": "^0.8.5",
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
